{
  "manifest_version": 3,
  "name": "LinkedIn connection counter",
  "version": "1.0",
  "description": "Extension chrome pour compter les connexions ajout√©es sur LinkedIn et renitialiser le compte au bout de 7 jours.",
  "permissions": ["activeTab", "storage", "scripting", "webRequest", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}